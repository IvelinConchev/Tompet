@model AllTechniquesQueryModel

@{
    ViewData["Title"] = "Всичката техника";
}

<form method="get">
    <div class="row">
        <div class="form-group col-md-4">
            <div class="form-group">
                <label asp-for="Name"></label>
                <select asp-for="Name" class="form-control">
                    <option value="">All</option>
                    @foreach (var name in Model.Names)
                    {
                        <option value="@name">@name</option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group col-md-4">
            <label asp-for="SearchTerm"></label>
            <input asp-for="SearchTerm" class="form-control" placeholder="Почистваща, копаеща ....">
        </div>

        <div class="form-group col-md-4">
            <div class="form-group">
                <label asp-for="Sorting"></label>
                <select asp-for="Sorting" class="form-control">
                    <option value="0" selected>Name and Type</option>
                    @*<option value="Name and Type">All</option>*@
                </select>
            </div>
        </div>
    </div>
</form>

@{
    var previousPage = Model.CurrentPage - 1;
    if (previousPage < 1)
    {
        previousPage = 1;
    }

    var maxPage = Math.Ceiling((double)Model.TotalTechnique / AllTechniquesQueryModel.TechniquesPerPage);
}

<div class="row mb-5">
    <div class="col-md-6">
        <a class="btn btn-primary @(Model.CurrentPage == 1 ? "disabled" : string.Empty)
           asp-controller="Techniques"
           asp-action="All"
           asp-route-currentPage="@previousPage"
           asp-route-name="@Model.Name"
           asp-route-searchTerm="@Model.SearchTerm"
           asp-route-sorting="@((int)Model.Sorting)"><<</a>
    </div>

    @{
        var shouldButtonBeDisabled = Model.CurrentPage == maxPage ||
            !Model.Techniques.Any();
    }

    <div class="col-md-6">
        <a class="btn btn-primary float-sm-right @(shouldButtonBeDisabled ? "disabled" : string.Empty)" style="margin-top: 10px"
           asp-controller="Techniques"
           asp-action="All"
           asp-route-currentPage="@(Model.CurrentPage + 1)"
           asp-route-name="@Model.Name"
           asp-route-searchTerm="@Model.SearchTerm"
           asp-route-sorting="@((int)Model.Sorting)">>></a>
    </div>
</div>

<div class="row">
    @foreach (var technique in Model.Techniques)
    {
        <div class="col-md-4">
            <div class="card">
                <img class="card-img-top" src="@technique.ImageUrl" alt="@technique.Name @technique.Type (@technique.Service)">
                <div class="card-body text-center">
                    <h5 class="card-title text-center">@technique.Name @technique.Type </h5>
                    <a asp-controller="Techniques" asp-action="Details" asp-route-id="@technique.Id" class="btn btn-primary">Виж</a>
                </div>
            </div>
        </div>
    }
</div>

