@model IndexViewModel
@{
    ViewData["Title"] = "Томпет ООД - Tompet OOD";
}

@{
    var technique = Model.Techniques;
    var firstTechnique = technique.Any() ? technique[0] : null;
    var secondTechnique = technique.Count > 1 ? technique[1] : null;
    var thirdTechnique = technique.Count > 2 ? technique[2] : null;
}

@if (!technique.Any())
{
    <div class="jumbotron">
        <h1 class="display-4">Добре дошли в сайта на Професионалисти учили във Франция!</h1>
        <p class="lead">There are no technique in the system currently available so why don't you just add one?</p>
        <hr class="my-4">
        <a asp-controller="Tecniques" asp-action="Add" class="btn btn-primary btn-lg" role="button">Add Technique</a>
    </div>
}

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        @if (firstTechnique != null)
        {
            <div class="carousel-item active">
                <img src="@firstTechnique.ImageUrl" class="d-block w-100" alt="@firstTechnique.Name @firstTechnique.Type">
                <div class="carousel-caption d-none d-md-block">
                    <h5><a class="btn btn-primary" asp-controller="Techniques" asp-action="Details" asp-route-id="@firstTechnique.Id">@firstTechnique.Name @firstTechnique.Type</a></h5>
                </div>
            </div>
        }
        @if (secondTechnique != null)
        {
            <div class="carousel-item">
                <img src="@secondTechnique.ImageUrl" class="d-block w-100" alt="@secondTechnique.Name @secondTechnique.Type">
                <div class="carousel-caption d-none d-md-block">
                    <h5><a class="btn btn-primary" asp-controller="Techniques" asp-action="Details" asp-route-id="@secondTechnique.Id">@secondTechnique.Name @secondTechnique.Type</a></h5>
                </div>
            </div>
        }
        @if (thirdTechnique != null)
        {
            <div class="carousel-item">
                <img src="@thirdTechnique.ImageUrl" class="d-block w-100" alt="@thirdTechnique.Name @thirdTechnique.Type">
                <div class="carousel-caption d-none d-md-block">
                    <h5><a class="btn btn-primary" asp-controller="Techniques" asp-action="Details" asp-route-id="@thirdTechnique.Id">@thirdTechnique.Name @thirdTechnique.Type</a></h5>
                </div>
            </div>
        }
    </div>
    <a class="carousel-control-prev" type="button" data-target="#carouselExampleControls" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" type="button" data-target="#carouselExampleControls" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="jumbotron">
    <div class="row">
        <div class="col-md-4">
            @Model.TotalTechniques Techniques
        </div>
        <div class="col-md-4">
            @Model.TotalUsers Users
        </div>
        <div class="col-md-4">
            @Model.TotalOrders Orders
        </div>
    </div>
</div>